<div class="modal fade  " id="fileUploadServerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
    <div class="modal-dialog modal-lg" role="document" data-ng-controller="FileUploadServerWidgetController as vm">
        <div class="modal-content">
            <div class="modal-header row pb-0">
                <div class="col-10 ">
                    <div class="row">
                        <div class="col-8">
                            <h5 class="modal-title" id="myModalLabel"> File Upload Server Handler</h5>
                        </div>
                        <div class="col-4">
                            <form>
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Control ID</div>
                                    </div>
                                    <input type="text" value="" placeholder="Control ID" class="form-control" data-ng-model="vm.model.controlIdentifier" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <div class="card o-hidden mb-0">
                    
                    <div class="card-body tab-content text-70">
                        <div id="cardOptions" class="tab-pane active">
                            <form autocomplete="off">
                                <div class="form-group row">
                                    <label class="col-4 col-form-label form-label">
                                        Form Fields for this handler 
                                    </label>
                                    <div class="col-4">
                                        <select data-ng-model="vm.model.fieldSelect" required="" class="form-control">
                                            <option value="all">All File Upload Fields</option>
                                            <option value="specify">Specify Fields</option>
                                        </select>
                                    </div>
                                    <div class="col-4" data-ng-show="vm.model.fieldSelect==='specify'">
                                        <input type="text" class="form-control mb-2" placeholder="separate multiple with comma" data-ng-model="vm.model.handlerFields">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label form-label">
                                        Save Files to Directory
                                    </label>
                                    <div class="col-8">
                                        <input type="text" class="form-control mb-2" placeholder="e.g. /var/www/images or c:/inetpup/app/images " data-ng-model="vm.model.destFolder">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label form-label">
                                        File Naming Logic
                                    </label>
                                    <div class="col-8">
                                        <select data-ng-model="vm.model.fileNameLogic" required="" class="form-control">
                                            <option value="sameName">Save with same name</option>
                                            <option value="fileNameDateTime">Append datetime to name (e.g. picture1_20220301_230059.jpg)</option>
                                            <option value="dateTime">Save file name with datetime (e.g. 20220301_230059.jpg)</option>
                                            <option value="uuid">Generate UUID (unique) file name</option>
                                            <option value="fileNameUuid">Append UUID to file</option>
                                            <option value="javascript">Javascript Function </option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row" data-ng-show="vm.model.fileNameLogic=='javascript'">
                                    <label class="col-12 col-form-label form-label">
                                        Enter Javascript Code
                                    </label>
                                    <div class="col-12">
                                        <div class="form-group">

                                            <pre style="padding: 0"><code data-language="javascript">
    /**Your code will be embedded in a function with the following arguments **/
    //inputFormData=Client Form input in json
    //IMPORTANT : Your function must return a string of the new file name
    function(inputFormData)
    { //put your code in the box below
</code></pre>
                                            <textarea class="form-control" rows="7" data-ng-model="vm.model.javascript"></textarea>
                                        </div>

                                    </div>
                                </div>




                            </form>
                        </div>
                        <div id="cardType" class="tab-pane ">
                            <h5>Select View Option</h5>
                            <form>
                               

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="cardDesignOption" id="fileUploadDesignOption2" data-ng-model="vm.model.viewOption" value="dropView" >
                                            <label class="form-check-label h5" for="fileUploadDesignOption2">
                                                Drop Area View
                                            </label>

                                            <div class="dropzone dropzone-multiple w-100 mb-24pt dz-clickable" data-toggle="dropzone" data-dropzone-multiple="" data-dropzone-url="http://" data-dropzone-files="">
                                                <ul class="dz-preview dz-preview-multiple list-group list-group-flush mt-16pt">
                                                </ul>
                                                <div class="dz-default dz-message"><button class="dz-button" type="button">Drop files here to upload</button>
                                                </div>
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="cardDesignOption" id="fileUploadDesignOption1" data-ng-model="vm.model.viewOption" value="formControlView" >
                                            <label class="form-check-label h5" for="fileUploadDesignOption1">
                                                Form Control View
                                            </label>
                                            <div class="col-md-12 col-xl-12 form-group row">
                                                <label class="col-sm-3 form-label col-form-label text-50"> Field Label</label>
                                                <div class="col-sm-6 col-md-6">
                                                    <div class="form-group m-0">
                                                        <div class="custom-file">
                                                            <input type="file" id="file" class="custom-file-input">
                                                            <label for="file" class="custom-file-label">Choose file</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </form>


                        </div>

                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-ng-click="vm.saveData()">Save</button>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>