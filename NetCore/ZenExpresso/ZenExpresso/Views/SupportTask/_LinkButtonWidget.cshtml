<div class="modal fade  " id="linkButtonModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
    <div class="modal-dialog modal-lg" role="document" data-ng-controller="LinkButtonWidgetController as vm">
        <div class="modal-content">
            <div class="modal-header row pb-0">
                <div class="col-10 ">
                    <div class="row">
                        <div class="col-8"> <h5 class="modal-title" id="myModalLabel">Button Control</h5></div>
                        <div class="col-4">
                            <form>
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Control ID</div>
                                    </div>
                                    <input type="text" value="" placeholder="Control ID" class="form-control" data-ng-model="vm.model.controlIdentifier" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div> 
            </div>
            <div class="modal-body" style="padding-bottom: 5px">
                <div class="card  ">
                     
                    <div class="card-header card-header-tabs-basic nav px-0" role="tablist">
                        <a href="#buttonDisplayTab" data-toggle="tab" class="active" role="tab">Button Display </a>
                        <a href="#buttonActionTab" data-toggle="tab" role="tab">Button Action</a>
                    </div> 

                    <div class="card-body  tab-content text-70">
                        
                        <div id="buttonDisplayTab" class="tab-pane active">
                            <div>
                                <form>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Button Label </label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control form-control-sm" data-ng-model="vm.linkButton.buttonLabel">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Button Action </label>
                                                <div class="col-sm-7">
                                                    <select class="form-control" data-ng-model="vm.linkButton.onClickAction">
                                                        <option value="">..Select Action To Execute onClick..</option>
                                                         
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Button Label </label>
                                                <div class="col-sm-7">
                                                    <select class="form-control" data-ng-model="vm.linkButton.buttonSize">
                                                        <option value="">..Select Size..</option>
                                                        <option value="btn-lg">Large</option>
                                                        <option value="btn-md">Medium</option>
                                                        <option value="btn-sm">Small</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Css Class </label>
                                                <div class="col-sm-7">
                                                    <select class="form-control" data-ng-model="vm.linkButton.css">
                                                        <option value="">..Select Css Class..</option>
                                                        <option value="btn-primary">btn-primary</option>
                                                        <option value="btn-secondary">btn-success</option>
                                                        <option value="btn-warning">btn-warning</option>
                                                        <option value="btn-link">btn-link</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Select Action </label>
                                                <div class="col-sm-7">
                                                    <select class="form-control" data-ng-model="vm.linkButton.css">
                                                        <option value="">..Select Css Class..</option>
                                                        <option value="btn-primary">btn-primary</option>
                                                        <option value="btn-secondary">btn-success</option>
                                                        <option value="btn-warning">btn-warning</option>
                                                        <option value="btn-link">btn-link</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label"></label>
                                                <div class="col-sm-7">
                                                    <button class="btn btn-primary btn-sm">Add Button</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div> 

                                    <br />
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>
                                                Action Name
                                            </th>
                                            <th>
                                                Button Label
                                            </th>
                                            <th>
                                                Button Action
                                            </th>
                                            <th>
                                                Button Size
                                            </th>
                                            <th>
                                                Css Class
                                            </th>
                                            <th>
                                                ..
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <tr data-ng-repeat="item in vm.model.linkButtons">

                                                <td data-ng-bind="item.buttonLabel">
                                                    Button Label
                                                </td>
                                                
                                                <td data-ng-bind="item.onClickAction">
                                                    onClickAction
                                                </td>
                                                <td data-ng-bind="item.buttonSize">
                                                    buttonSize
                                                </td>
                                                <td data-ng-bind="item.css">
                                                    Css
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-sm" data-ng-click="vm.deleteRowAction($index)">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </form>
                            </div>
                        </div>
                        <div id="buttonActionTab" class="tab-pane ">

                            <div>
                                <form>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">On Click Options </label>
                                                <div class="col-sm-7">
                                                    <select class="form-control form-control-sm" data-ng-model="vm.clickAction.onClickMode">
                                                        <option value="">..Select ..</option>
                                                        <option value="static">Open Static Link</option>
                                                        <option value="supportTask">Execute Task</option>
                                                        <option value="javascript">Execute Javascript</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row" data-ng-show="vm.clickAction.onClickMode=='static'">
                                                <label class="col-sm-5 col-form-label form-label">Enter Static link </label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control form-control-sm" placeholder="http://example.com/index.html" data-ng-model="vm.clickAction.staticLink">
                                                </div>
                                            </div>
                                            <div class="form-group row" data-ng-show="vm.clickAction.onClickMode=='supportTask'">
                                                <label class="col-sm-5 col-form-label form-label">Executing Task ID </label>
                                                <div class="col-sm-7">
                                                    <select type="text" data-toggle="select" class="form-control form-control-sm" data-ng-model="vm.clickAction.taskId" data-ng-options="item.id as item.taskName for item in vm.supportTasks">
                                                        <option value="">[Select One..]</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row" data-ng-show="vm.clickAction.onClickMode=='supportTask'">
                                        <label class="col-sm-5 col-form-label form-label">Json Task Data  </label>
                                        <div class="col-sm-7">
                                            <label class="control-label small col-form-label">Enter Json To Pass To Task</label>
                                            <textarea class="form-control" rows="7" data-ng-model="vm.clickAction.taskData"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row" data-ng-show="vm.clickAction.onClickMode=='javascript'">
                                        <label class="col-sm-5 col-form-label form-label">Executing Task ID </label>
                                        <div class="col-sm-7">
                                            <label class="control-label" data-ng-show="vm.clickAction.onClickMode=='javascript'">Enter Javascript Code <small>Will be wrapped in a function</small></label>
                                            <pre style="padding: 0"><code data-language="javascript">/**Your code will be embedded in a function with the following arguments **/
//utils=utils.alertSuccess, utils.alertError,utils.alertConfirm, utils.sweetAlert, utils.toastr, utils._ (lodash)
 function( utils)
{ //put your code in the box below
                                            </code></pre>
                                            <textarea class="form-control" rows="7" data-ng-model="vm.clickAction.javascript"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label">Action Name </label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control form-control-sm" data-ng-model="vm.clickAction.actionName">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label form-label"></label>
                                                <div class="col-sm-7">
                                                    <button class="btn btn-sm btn-primary" data-ng-hide="vm.isEdittingAction" data-ng-click="vm.addAction()">Add Action</button>
                                                    <button class="btn btn-sm btn-primary" data-ng-show="vm.isEdittingAction" data-ng-click="vm.saveAction()">Sav Action</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    OnClick Mode
                                                </th>
                                                <th>
                                                    Task ID
                                                </th>
                                                <th>
                                                    Static Link
                                                </th>
                                                 
                                                <th>
                                                    ..
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr data-ng-repeat="item in vm.model.clickActions">
                                                <td data-ng-bind="item.buttonLabel">
                                                    Button Label
                                                </td>
                                                <td data-ng-bind="item.onClickAction">
                                                    onClickAction
                                                </td>
                                                <td data-ng-bind="item.buttonSize">
                                                    buttonSize
                                                </td>
                                                <td data-ng-bind="item.css">
                                                    Css
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-sm" data-ng-click="vm.editAction($index)">Edit</button>
                                                    <button type="button" class="btn btn-danger btn-sm" data-ng-click="vm.deleteAction($index)">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>



                                </form>
                            </div>
                        </div>







                        </div>
                </div> 

                 
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-ng-click="vm.saveData()">Save</button>
            </div>
        </div>
    </div>
</div>