<div class="modal fade  " id="successMessageOutputModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
    <div class="modal-dialog modal-lg" role="document" data-ng-controller="SuccessMessageWidgetController as vm">
        <div class="modal-content">
            <div class="modal-header">

                <div class="col-10 ">
                    <div class="row">
                        <div class="col-8"> <h5 class="modal-title" id="myModalLabel">Success Message Output Design</h5></div>
                        <div class="col-4">
                            <form>
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Control ID</div>
                                    </div>
                                    <input type="text" value="" placeholder="Control ID" class="form-control" data-ng-model="vm.model.controlIdentifier" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <form class="">
                    
                    <div class="form-group row">
                       
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="col-md-12">Status Code Field</label>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control " required="" placeholder="Field Name" data-ng-model="vm.model.fieldName">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="col-md-12">Status Code Value</label>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control " required="" placeholder=" Value" data-ng-model="vm.model.code">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="col-md-12">Status Message <input type="checkbox" data-ng-model="vm.model.enterMessage">Static </label>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control " required="" placeholder="Field Name" data-ng-model="vm.model.messageField" data-ng-hide="vm.model.enterMessage">
                                        <input type="text" class="form-control " required="" placeholder="Enter Message" data-ng-model="vm.model.staticMessage" data-ng-show="vm.model.enterMessage">
                                    </div>
                                 </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="col-md-12">Alert Type </label>
                                    <div class="col-md-12">
                                        <select type="text" class="form-control " required="" placeholder="Field Name" data-ng-model="vm.model.alertType">
                                            <option value="success">Success</option>
                                            <option value="error">Error</option>
                                            <option value="warning">Warning</option>
                                        </select>
                                    </div>
                                </div>
                            </div>  
                            <div class="col-md-1"> 
                                    <div class="form-group">
                                        <label class="col-md-12">Add</label>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <button class="btn btn-sm btn-primary btn-block" type="button" data-ng-click="vm.addStatusCode()">Add</button>
                                            </div> 
                                        </div>
                                    </div> 
                            </div>  
                         
                    </div>

                    <div class="row" data-ng-show="vm.statusCodes.length">
                        <div class="col-md-12">
                            <h5>Status Message Confis</h5>
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered">
                                        <thead class="thead-light">
                                        <tr>
                                            <td>Status Code Field</td>
                                            <td>Status Code Value</td>
                                            <td>Status Message</td>
                                            <td>Alert Type</td>
                                            <td>..</td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr data-ng-repeat="item in vm.statusCodes">
                                            <td><span data-ng-bind="item.fieldName"></span></td>
                                            <td><span data-ng-bind="item.code"></span></td>
                                            <td>

                                                <span data-ng-hide="item.enterMessage" data-ng-bind="item.messageField"></span>
                                                <span data-ng-show="item.enterMessage" data-ng-bind="item.staticMessage"></span>

                                            </td>
                                            <td><span data-ng-bind="item.alertType"></span></td>
                                            <td>
                                                <button class="btn btn-danger btn-sm" type="button" data-ng-click="vm.deleteStatusCodes($index)">Delete</button>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-ng-click="vm.saveData()">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

