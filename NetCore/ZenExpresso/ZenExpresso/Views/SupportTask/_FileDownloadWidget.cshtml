<div class="modal fade  " id="fileDownloadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
    <div class="modal-dialog modal-lg" role="document" data-ng-controller="FileDownloadWidgetController as vm">
        <div class="modal-content">
            <div class="modal-header row pb-0">
                <div class="col-10 ">
                    <div class="row">
                        <div class="col-8"> <h5 class="modal-title" id="myModalLabel">File Download Control</h5></div>
                        <div class="col-4">
                            <form>
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Control ID</div>
                                    </div>
                                    <input type="text" value="" placeholder="Control ID" class="form-control" data-ng-model="vm.model.controlIdentifier" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div> 
            </div>
            <div class="modal-body" style="padding-bottom: 5px">
                <div class="card  ">
                    <div class="card-body  text-70">
                        <div id="restbody" class="tab-pane active">
                            <form>
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label form-label">Title/Description </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control " data-ng-model="vm.model.description">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label form-label">Download File From </label>
                                        <div class="col-sm-6">
                                            <select class="form-control" data-ng-model="vm.model.controlDataSource" data-ng-options="item.key as item.dataSourceName for item in vm.dataSources">
                                                <option value="">..Select ..</option> 
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row" data-ng-show="vm.model.controlDataSource=='static'">
                                        <label class="col-sm-5 col-form-label form-label">Enter Static File link </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" placehold="http://example.com/examplefile.pdf" data-ng-model="vm.model.fileLink">
                                        </div>
                                    </div> 
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label form-label">Download Start Options</label>
                                        <div class="col-sm-6">
                                            <select class="form-control" data-ng-model="vm.model.downloadStart">
                                                <option value="">..Select ..</option>
                                                <option value="onButtonClick">Start download on button click</option>
                                                <option value="onPageLoad">Start download on page load</option>
                                            </select>
                                        </div>
                                    </div> 
                                    <div class=" form-group row">
                                        <label class=" col-sm-5 col-form-label form-label" for="printPreview">
                                            Open print preview
                                        </label>
                                        <div class="col-sm-6 ">
                                            <input class="form-check-input" type="checkbox" id="printPreview" data-ng-model="vm.model.printPreview">
                                        </div>   
                                    </div> 
                            </form>
                        </div> 
                    </div>
                </div> 

                 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-ng-click="vm.saveData()">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>