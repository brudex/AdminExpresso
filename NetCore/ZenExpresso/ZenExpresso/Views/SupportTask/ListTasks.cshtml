@model List<ZenExpressoCore.Models.SupportTask>
@{
    ViewBag.Title = "Manage Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel default blue_title h2">
            <div class="panel-heading">@ViewBag.Title </div>
            <div class="panel-body">
                <table class="table table-bordered" id="taskListTable">
                    <thead>
                    <tr>
                        <td>Task</td>
                        <td>Description</td>
                        <td>TopLevelMenu Task</td>
                        <td>TaskType</td>
                         <td>CreatedBy</td>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.taskName</td>
                            <td>@task.description</td>
                            <td>@task.topLevelMenu Task</td>
                            <td>@task.taskType</td>
                             <td>@task.createdBy</td>
                            <td>
                                <a class="btn btn-danger btn-xs" href="@Url.Action("DeleteTask", new {id = task.id})">Delete </a>
                                @if (task.IsAdvancedTask())
                                {
                                   <a class="btn btn-info btn-xs" href="@Url.Action("EditAdvancedTask", new {id = task.id})">Edit</a>
                                }
                                else
                                {
                                    <a class="btn btn-info btn-xs" href="@Url.Action("EditSupportTask", new {id = task.id})">Edit</a>
                                }
                                <a class="btn btn-primary btn-xs" href="@Url.Action("AssignGroups", new {id = task.id})">Assign Groups</a>
                                <a class="btn btn-success btn-xs" href="@Url.Action("ExecuteTask", new {id = task.id})">Execute</a>

                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div></div>
        </section>
    </div>
</div>
@section MyScripts
{
    <script>

        $(document).ready(function () {
            $('#taskListTable').DataTable({
                "paging": false
            });
        });

  </script>
}
