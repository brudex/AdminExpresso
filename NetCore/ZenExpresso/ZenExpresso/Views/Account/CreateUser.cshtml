@model ZenExpresso.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
  
<div class="row" ng-app="app">
    <div class="card col-md-12" data-ng-Controller="DbLogController as vm">
        <div class="block-web">
            <div class="card-header pb-0">
                <h3 class="">Create User</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("CreateUser", "Account", FormMethod.Post, new { @class="was-validated", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewBag.Created != null)
                            {
                                if (ViewBag.Created == true)
                                {
                                    <div class="form-group row">
                                        <label class="col-md-3"></label>
                                        <div class="col-md-9">
                                            <div class="alert alert-success">
                                                User successfully created
                                            </div>  
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group row">
                                        <label class="col-md-3"></label>
                                        <div class="col-md-9">
                                            <div class="alert alert-danger">
                                                Error : @ViewBag.Error
                                            </div>
                                        </div>
                                    </div>
                                } 
                            }
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 form-label col-form-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , required=true })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 form-label col-form-label" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = true })
                                </div>
                            </div>  
                            <div class="form-group row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                    <input type="submit" class="btn btn-primary float-right" value="Register" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

                
            </div><!--/porlets-content-->
        </div><!--/block-web-->
    </div><!--/col-md-12-->
</div>

