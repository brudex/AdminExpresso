@using ZenExpressoCore.Models
@using ZenExpressoCore
@model List<ZenExpressoCore.Models.AspnetUser>
@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" ng-app="app">
    <div class="card col-md-12" >
        <div class="card-header pb-0">
            <h3>@ViewBag.Title </h3>
        </div>
        <div class="card-body">
              <div class="form-group row">
                                     <div class="col-sm-12">
                                             <label class="h4 ">List of Users </label>
                                             <table class=" table mb-0 thead-border-top-0  was-validated table-responsive">
                                                 <thead>
                                                     <tr class="col-md-12">
                                                         <th>User Name</th>
                                                         <th>Email</th>
                                                         <th></th>
                                                     </tr>
                                                 </thead>
                                                 <tbody>
                                                 @foreach (AspnetUser user in Model)
                                                 {
                                                     <tr>
                                                         <td>@user.UserName</td>
                                                         <td >@user.email</td>
                                                         <td>
                                                             <div class="btn-group">
                                                                 <a href="/Manage/ManageRoles?username=@user.UserName.UrlEncode()"  class="btn btn-sm btn-success action-view"><i class="fa fa-user-check"></i>ManageRoles</a>
                                                                 <a type="button" href="/Manage/DeleteUser/@user.id" class="btn btn-sm btn-danger action-view"><i class="fa fa-trash"></i>Delete</a>
                                                             </div>
                                                         </td>
                                                    </tr>
                                                 }
                                                 @if (Model.Count == 0)
                                                 {
                                                     <tr class="h4"> <td colspan="3"  height="5">No Users to Manage
                                                     
                                                         </td> </tr>
                                                 }
                                                
                                                 </tbody>
                                             </table>
                                         
                                     </div>
                                 </div> 

        </div><!--/porlets-content-->
        <!--/block-web-->
    </div><!--/col-md-12-->
</div>
